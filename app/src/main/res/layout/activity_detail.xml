<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.DetailsActivity"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/imageview_cat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/details_image_margin"
        android:layout_marginBottom="@dimen/details_image_margin"
        android:adjustViewBounds="true"
        android:scaleType="center"/>

    <RadioGroup android:id="@+id/radioGroupVote"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/details_image_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="top"
                android:visibility="invisible"
                android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_thumbs_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginEnd="50dp"
            android:button="@drawable/button_thumbs_up_selector"/>

        <RadioButton
            android:id="@+id/button_thumbs_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:button="@drawable/button_thumbs_down_selector"/>

    </RadioGroup>



</android.support.constraint.ConstraintLayout>